<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/buttonHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/battery"
                android:src="@drawable/ic_qs_battery_neutral"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/brightness"
                android:src="@drawable/ic_qs_brightness_auto_off"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/settings"
                android:src="@drawable/ic_qs_settings"
                android:layout_weight="1"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:id="@+id/time"
                    android:layout_gravity="right|center_vertical"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/01"
                    android:id="@+id/date"
                    android:layout_gravity="left|center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autoRotateLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_qs_auto_rotate"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Auto Rotate"
                android:id="@+id/textView2"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10sp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/autoRotateToggle"
                android:layout_gravity="right|center_vertical"
                android:checked="false"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bluetoothLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_qs_bluetooth_not_connected"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bluetooth"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10sp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueToothToggle"
                android:layout_gravity="right|center_vertical"
                android:checked="false"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gpsLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_qs_gps_on"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GPS"
                android:id="@+id/textView3"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10sp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gpsToggle"
                android:layout_gravity="right|center_vertical"
                android:checked="false"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_qs_signal_0"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mobile data"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10sp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobileToggle"
                android:layout_gravity="right|center_vertical"
                android:checked="false"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wifiLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@drawable/ic_qs_wifi_0"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wifi"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10sp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wifiToggle"
                android:layout_gravity="right|center_vertical"
                android:checked="false"/>

    </LinearLayout>

</LinearLayout>